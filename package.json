{
	"name": "@phenomen/foundry-vtt-ru",
	"private": "true",
	"scripts": {
		"compile:js": "bun build.ts",
		"compile:css": "lightningcss --minify ./ru-ru/styles/*.css --output-dir ./ru-ru/styles",
		"compile": "bun compile:js && bun compile:css",
		"bump": "bun bump.ts",
		"release": "bun bump && bun compile",
		"format:check": "prettier --check ./src",
		"format": "prettier --write ./src"
	},
	"type": "module",
	"dependencies": {
		"@types/bun": "^1.0.11",
		"lightningcss-cli": "^1.24.1",
		"prettier": "^3.2.5"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
